{
  "manifest_version": 3,
  "name": "AI Meeting Summarizer",
  "version": "1.0",
  "description": "Capture and summarize meeting audio automatically",
  "permissions": [
    "tabCapture",
    "activeTab",
    "storage"
  ],
  "optional_permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Meeting Summarizer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
